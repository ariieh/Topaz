<% if action == "new" %>
  <form id="article-form" enctype="multipart/form-data" action="<%= articles_url(current_user) %>" method="post">
<% else %>
  <form id="article-form" enctype="multipart/form-data" action="<%= article_url(@article) %>" method="post">
	<%= hidden_method("put") %>  
<% end %>

	<%= auth_token %>  

	<label>
		Title<br>
		<input type="text" name="article[title]" value="<%= @article.title %>">
	</label>

	<br><br>

	<label>
		Image<br>
		<input type="file" name="article[photo]">
	</label>

	<br><br>

	<label>
		Body<br>
		<textarea name="article[body]" cols="70" rows="20"><%= @article.body %></textarea>
	</label>


	<br><br>

  <input type="text" name="article[taglist]" placeholder="Add some tags" value="<%= @article.taglist %>">
  
  <br><br>

<% if action == "new" %>
  <input type="submit" value="Create Article">
<% else %>
  <input type="submit" value="Update Article">
<% end %>
</form>