<nav class="group">
	<div class="logo"><a href="/"> T O P A Z</a></div>
	<% if signed_in? %>
		<div class="welcome">signed in as <%= current_user.username %></div>
	<% end %>
	
	<ul class="group">
		<li><i class="fa fa-search"></i></li>
  	<% if signed_in? %>
  		<li>
        <i class="fa fa-flag"></i>
        <% if current_user.notifications.where(read: false).count > 0 %>
          <span class="badge">
            <%= current_user.notifications.where(read: false).count %>
          </span>
        <% end %>
        <div class="notifications">
          <ul>
            <% current_user.notifications.each do |notification| %>
              <li class="<%= 'unread' unless notification.read %>">
                <a href="<%= notification.url_path %>">
                  <%= notification.message %>
                </a>
              </li>            
            <% end %>
          </ul>
        </div>
      </li>
  	<% end %>
		<li><i class="fa fa-twitter"></i></li>
		<li><i class="fa fa-facebook"></i></li>
		<li>
			<i class="fa fa-tasks"></i>
			<ul class="menu-bar">
				
				<% if !signed_in? %>
					<li>
						<a href="<%= new_session_url %>">Sign in</a>
					</li>
					<li>
						<a href="<%= new_user_url %>">Sign up</a>
					</li>
				<% else %>
					<li>
						<form action="<%= session_url %>"
							method="post">
							<%= auth_token %>
							<%= hidden_method("delete") %>
							<button type="submit">Sign out</button>
						</form>
					</li>
				<% end %>
				
				<li><a href="#">Daily brief</a></li>
				<li><a href="<%= static_pages_about_url %>">About</a></li>
			</ul>
		</li>
	</ul>
</nav>