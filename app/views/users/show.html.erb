<h2><%= @user.username %></h2>
<h3><%= @user.email %></h3>

<% if @user == current_user %>
  <a href="<%= new_article_url %>">New article</a>
  <br><br>
<% end %>

<% content_for :sidebar do %>
  <ul>
    <% @user.articles.order(:created_at).reverse.each do |article| %>
    	<li>
        <%= render "articles/snippet", article: article, view: "author",
            el: @user.username %>        
        <% if @user == current_user %>
          <form action="<%= article_url(article) %>" method="post">
            <%= auth_token %>
            <%= hidden_method("delete") %>
            <input type="submit" value="Delete">
          </form>
          <a href="<%= edit_article_url(article) %>">Edit</a><br>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>